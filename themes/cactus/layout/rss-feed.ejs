<%
  var isImage = function(url) {
    return /\.(jpg|jpeg|png|gif|webp|bmp|svg)$/i.test(url);
  };
%>

<section class="rss-feed">
  <h1 class="h1">Read What I Read</h1>
  <style>
  	h2 {
  		align: center;
  	}

    .rss-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
      padding: 1rem 0;
    }

    .rss-card {
      display: flex;
      flex-direction: column;
      background: #151515;
      border: 1px solid #FCC200;
      border-radius: 10px;
      padding: 20px;
      overflow: hidden;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: transform 0.2s ease;
    }

    .rss-card:hover {
      transform: translateY(-4px);
    }

    .rss-image {
      width: 100%;
      height: 160px;
      object-fit: cover;
      background: rgba(0, 0, 0, 0);
      border-radius: 10px;
    }

    .rss-content {
      padding: 1rem;
    }

    .rss-title {
      font-size: 1.1rem;
      font-weight: bold;
      margin: 0 0 0.5rem 0;
      color: #333;
      text-decoration: none;
    }

    .rss-title:hover {
      text-decoration: underline;
    }

    .rss-meta {
      font-size: 0.9rem;
      color: #777;
      margin-bottom: 0.5rem;
    }

    .rss-snippet {
      font-size: 0.95rem;
      color: #797979;
    }

    .blog-link {
      margin-top: 10px;
    }
  </style>
  <div class="rss-grid">
    <% page.externalFeeds.forEach(function(item) { %>
      <div class="rss-card">
		  <img class="rss-image" src="<%= item.bannerImage %>" alt="Preview image">

		  <div class="rss-content">
		    <a href="<%= item.link %>" class="rss-title" target="_blank" rel="noopener noreferrer">
		      <%= item.title %>
		    </a>
		    <div class="rss-meta">
		      <%= item.creator || item.author || 'Unknown author' %> |
		      <%= new Date(item.pubDate).toLocaleDateString() %>
		    </div>
		    <div class="rss-snippet">
		      <%= item.contentSnippet || '' %>
		    </div>
		    <a href="<%= item.channelLink %>" target="_blank" class="blog-link"><%= item.channelTitle %></a>
		  </div>
		</div>
    <% }); %>
</section>