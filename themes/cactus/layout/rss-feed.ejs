<section class="rss-feed">
  <h1 class="h1">Read What I Read</h1>
  <style>
  	h2 {
  		align: center;
  	}
    
    .rss-columns {
      display: flex;
      gap: 1.5rem;
    }
    
    @media (max-width: 480px) {
      .rss-columns {
        flex-direction: column;
        max-width: 90%;
        margin: auto;
        margin-top: 25px;
      }
    }

    .rss-column {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
      height: fit-content;
    }

    .rss-card {
      background: #151515;
      border: 1px solid #FCC200;
      border-radius: 10px;
      padding: 20px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      transition: transform 0.2s ease;
    }
    .rss-card:hover {
      transform: translateY(-4px);
    }

    .rss-image {
      width: 100%;
      height: 160px;
      object-fit: cover;
      background: rgba(0, 0, 0, 0);
      border-radius: 10px;
    }

    .rss-content {
      padding: 1rem;
    }

    .rss-title {
      font-size: 1.1rem;
      font-weight: bold;
      margin: 0 0 0.5rem 0;
      color: #333;
      text-decoration: none;
    }

    .rss-title:hover {
      text-decoration: underline;
    }

    .rss-meta {
      font-size: 0.9rem;
      color: #777;
      margin-bottom: 0.5rem;
    }

    .rss-snippet {
      font-size: 0.95rem;
      color: #797979;
    }

    .blog-link {
      margin-top: 10px;
    }
  </style>
  <div class="rss-columns">
    <div id="col-left"  class="rss-column"></div>
    <div id="col-right" class="rss-column"></div>
  </div>
  <!-- data injection for JS to consume: -->
  <script type="application/json" id="feed-data">
    <%- JSON.stringify(page.externalFeeds) %>
  </script>
  <script>
    (function() {
      // Parse the injected JSON
      const feeds = JSON.parse(document.getElementById('feed-data').textContent);

      const leftCol  = document.getElementById('col-left');
      const rightCol = document.getElementById('col-right');

      // Helper to choose the shorter column
      function shorterColumn() {
        return (leftCol.getBoundingClientRect().height <= rightCol.getBoundingClientRect().height) ? leftCol : rightCol;
      }

      // Create and append each card
      feeds.forEach(item => {
        const card = document.createElement('div');
        card.className = 'rss-card';

        card.innerHTML = `
          <img class="rss-image" src="${item.bannerImage}" alt="">
          <div class="rss-content">
            <a href="${item.link}" class="rss-title">${item.title}</a>
            <div class="rss-meta">
              ${item.creator || item.author || 'Unknown'} |
              ${new Date(item.pubDate).toLocaleDateString()}
            </div>
            <div class="rss-snippet">${item.contentSnippet || ''}</div>
            <a href="${item.channelLink}" class="blog-link">${item.channelTitle}</a>
          </div>`;

        // Append to the currently shorter column
        shorterColumn().appendChild(card);
      });
    })();
  </script>
</section>